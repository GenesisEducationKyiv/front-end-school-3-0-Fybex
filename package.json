{
  "name": "music-app-monorepo",
  "version": "1.0.0",
  "description": "Music application monorepo with client, server, and shared packages",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "test": "npm run test --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "typecheck": "npm run typecheck --workspaces --if-present",
    "proto:generate": "npm run generate --workspace=@music-app/proto",
    "proto:build": "npm run build --workspace=@music-app/proto",
    "proto:generate:build": "npm run generate:build --workspace=@music-app/proto",
    "proto:dev": "npm run dev --workspace=@music-app/proto",
    "client:dev": "npm run dev --workspace=@music-app/client",
    "server:dev": "npm run dev:with-proto --workspace=@music-app/server",
    "server:test": "npm run test --workspace=@music-app/server",
    "server:start": "npm run start --workspace=@music-app/server",
    "server:build-and-start": "npm run build --workspace=@music-app/server && npm run start --workspace=@music-app/server",
    "client:preview": "npm run preview --workspace=@music-app/client",
    "client:build-and-preview": "npm run build --workspace=@music-app/client && npm run preview --workspace=@music-app/client",
    "client:test": "npm run test:vitest --workspace=@music-app/client",
    "test:e2e": "npm run test:e2e --workspace=@music-app/client"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "npm": "^11.4.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=10.0.0"
  }
}
